<div class="container">
  <h1 class="page-title">新規ユーザー登録</h1>

  <%= form_with model: @user, local: true, class: 'user-form' do |form| %>
    <div class="form-group">
      <%= form.label :name, '名前' %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :birthday, '生年月日' %>
      <%= form.date_field :birthday, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :gender, '性別' %>
      <div class="radio-group">
        <%= form.radio_button :gender, 'male', required: true %>
        <%= form.label :gender_male, '男性' %>
        <%= form.radio_button :gender, 'female', required: true %>
        <%= form.label :gender_female, '女性' %>
      </div>
    </div>

    <%= form.submit 'ユーザー作成', class: 'submit-button' %>
  <% end %>

  <%= link_to 'ユーザー一覧に戻る', users_path, class: 'back-link' %>
</div>