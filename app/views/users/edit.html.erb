<div class="container">
  <div class="form-container">
    <h2 class="page-title">ユーザー情報の編集</h2>
    
    <%= form_with model: @user, local: true, class: 'user-form' do |form| %>
      <div class="form-group">
        <%= form.label :name, '名前' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :birthday, '生年月日' %>
        <%= form.date_field :birthday, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :gender, '性別' %>
        <%= form.select :gender, [['選択してください', ''], ['男性', '男性'], ['女性', '女性'], ['その他', 'その他']], {}, { class: 'form-control', required: true } %>
      </div>

      <div class="button-group">
        <%= form.submit '更新', class: 'btn btn-primary' %>
        <%= link_to '戻る', users_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>