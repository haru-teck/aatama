<div class="container">
  <h1 class="page-title">体調管理一覧</h1>

  <div class="table-responsive">
    <table class="condition-table">
      <thead>
        <tr>
          <th>日付</th>
          <th>名前</th>
          <th>体温</th>
          <th>食事</th>
          <th>水分</th>
          <th>嘔吐</th>
          <th>メモ</th>
          <th>画像</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @conditions.each do |condition| %>
          <tr>
            <td data-label="日付"><%= condition.input_day.strftime("%Y/%m/%d %H:%M") %></td>
            <td data-label="名前"><%= condition.user&.name || '不明' %></td>
            <td data-label="体温"><%= condition.temperature %>℃</td>
            <td data-label="食事"><%= condition.eat || '未入力' %></td>
            <td data-label="水分"><%= condition.moisture || '未入力' %></td>
            <td data-label="嘔吐"><%= condition.puke || '未入力' %></td>
            <td data-label="メモ" class="memo-cell"><%= truncate(condition.memo, length: 20) || '未入力' %></td>
            <td data-label="画像" class="image-cell">
              <% if condition.images.attached? %>
                <% condition.images.each do |image| %>
                  <%= image_tag url_for(image.variant(resize_to_limit: [50, 50])), alt: '体調管理の画像', class: 'condition-image' %>
                <% end %>
              <% end %>
            </td>
            <td data-label="操作" class="action-cell">
              <%= link_to '編集', edit_condition_path(condition), class: 'button button-edit' %>
              <%= button_to '削除', condition_path(condition), method: :delete, data: { confirm: '本当に削除しますか？' }, form: { data: { turbo: false } }, class: 'button button-delete' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="new-condition-link">
    <%= link_to '新規体調記録', new_condition_path, class: 'button button-new' %>
  </div>
</div>