<div class="container">
  <h1 class="page-title">体調記録の編集</h1>

  <%= form_with model: @condition, local: true, class: 'condition-form' do |form| %>
    <div class="form-group">
      <%= form.label :input_day, '記録日時' %>
      <%= form.date_field :input_day, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :temperature, '体温' %>
      <%= form.number_field :temperature, step: '0.1', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :eat, '食欲' %>
      <%= form.text_field :eat %>
    </div>

    <div class="form-group">
      <%= form.label :moisture, '水分' %>
      <%= form.text_field :moisture %>
    </div>

    <div class="form-group">
      <%= form.label :puke, '嘔吐' %>
      <%= form.text_field :puke %>
    </div>

    <div class="form-group">
      <%= form.label :memo, 'メモ' %>
      <%= form.text_area :memo, rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :images, '画像' %>
      <%= form.file_field :images, multiple: true %>
      <% if @condition.images.attached? %>
        <div class="image-preview">
          <% @condition.images.each do |image| %>
            <%= image_tag image, size: "100x100" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit '更新', class: 'submit-button' %>
    </div>
  <% end %>
</div>